<section class="content-header">
   <h1>
      Finalizar Cadastro
      <small></small>
   </h1>
</section>
<%= form_for @user, url: { :action => "update" }, html: { id: "edit_user_form", method: :put } do |f| %>
<% if @user.errors.any? %>
<script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@user.errors.count, "erros") %> encontrados: </br><ul><% @user.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
   });
</script>
<% end %>
<!-- Main content -->
<section class="content">
   <!-- /.box -->
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Dados</h3>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
         <div class="row">
            <div class="col-md-6">
               <div class="form-group">
                  <label>Nome Completo</label>
                  <%= f.text_field :name, :id => 'name', placeholder: 'Nome completo', class: 'form-control'%>
               </div>
            </div>
            <div class="col-md-6">
               <div class="form-group">
                  <label>Tamanho da Camisa</label>
                  <%= f.select :shirt, options_for_select(sizes_to_array, selected: @user.shirt), {}, class: 'form-control' %>
               </div>
            </div>
            <div class="col-md-6">
               <div class="form-group">
                  <label>Curso</label>
                  <%= f.text_field :course, :id => 'curso', placeholder: 'Curso', class: 'form-control'%>
               </div>
            </div>
          <div class="col-md-6">
               <div class="form-group">
                  <label>Semestre</label>
                  <%= f.select :semester, (1..10), { :include_blank => true } , :id => 'semestre', class: 'form-control'%>
               </div>
            </div>
            <div class="col-md-6">
               <div class="form-group">
                  <label>Universidade</label>
                    <%= f.text_field :university, :id => 'universidade', placeholder: 'Universidade', class: 'form-control' %>
               </div>
            </div>
            <!-- /.col -->
            <div class="col-md-6">
               <div class="form-group">
                  <label>Data de Nascimento</label>
                  <div class="input-group date">
                     <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                     </div>
                     <%= f.text_field :birthday, :id => 'birthday_picker', placeholder: 'Data de nascimento', class: 'form-control'%>
                  </div>
               </div>
            </div>
         </div>
         <!-- /.row -->
      </div>
      <!-- /.box-body -->
   </div>
   <!-- /.box -->
   <!-- /.box -->
   <div class="box box-success">
      <div class="box-header with-border">
         <button type="submit" class="btn btn-block btn-success">SALVAR</button>
          <button type="button" class="btn btn-box-tool" data-widget="collapse"</button>
      </div>
   </div>
   <!-- /.box -->
</section>
<% end %>
